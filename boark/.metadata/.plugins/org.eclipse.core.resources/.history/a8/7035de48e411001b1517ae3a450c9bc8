<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.homme.model.ReplyDAO">

<!-- 댓글 조회 -->
	<select id="replyList" parameterType="int" resultType="com.homme.model.entity.ReplyVO">
		select
			rno, bno, writer, content, regDate
		from tbl_reply
			where bno = #{bno}		
	</select>
	
	<!-- 댓글 작성 -->
	<insert id="replyWrite" parameterType="com.homme.model.entity.ReplyVO">
		insert into tbl_reply(bno, writer, content, regDate)
			value(#{bno}, #{writer}, #{content}, #{regDate})
	</insert>
		
	<!-- 댓글 수정 -->
	<update id="replyModify" parameterType="com.homme.model.entity.ReplyVO">
		update tbl_reply set
			writer = #{writer},
			content = #{content}
		where rno = #{rno}
			and bno = #{bno}	
	</update>
	
	<!-- 댓글 삭제 -->
	<delete id="replyDelete" parameterType="com.homme.model.entity.ReplyVO">
		delete from tbl_reply
		where rno = #{rno}
			and bno = ${bno}	
	</delete>
	
</mapper>