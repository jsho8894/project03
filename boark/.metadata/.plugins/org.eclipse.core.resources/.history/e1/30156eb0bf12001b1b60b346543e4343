<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.homme.Mapper.replyMapper">
    
	<!-- 댓글 조회 -->
	<select id="readReply" resultType="com.homme.model.entity.ReplyVO">
		select
		    rno, content, writer, regDate
		from reply
		    where bno = #{bno}
	</select>
	
	<!-- 댓글 작성 -->
	<insert id="writeReply">
		insert into
			reply(bno, rno, content, writer)
    	values(#{bno}, #{rno},#{content}, #{writer})
	</insert>
	
<!-- 특정 댓글 조회 -->
<select id="readReplySelect" resultType="com.homme.model.entity.ReplyVO">
	select
	    bno, rno, content, writer, regDate
	from reply
	    where rno = #{rno}
</select>

<!-- 댓글 수정 -->
<update id="updateReply">
	update reply
	    set
	        content = #{content}
	    where rno = #{rno}
</update>

<!-- 댓글 삭제 -->
<delete id="deleteReply">
	delete from reply
		where rno = #{rno}
</delete>
</mapper>